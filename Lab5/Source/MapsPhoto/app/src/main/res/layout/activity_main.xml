<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:background="@drawable/bg3"

    tools:context="com.example.vbmxb.gmapsphotoapp.MainActivity"
tools:showIn="@layout/activity_main">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:id="@+id/bu2"
        android:layout_marginTop="10dp"
        android:layout_marginRight="240dp"
        android:layout_below="@+id/editText5"
        android:layout_alignParentEnd="true"
        />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="SIGN UP"
    android:id="@+id/main_btn_maps"
    android:onClick="onClickOfMapButton"
    android:layout_below="@+id/main_btn_photo"
    android:layout_marginRight="10dp"
    android:layout_toStartOf="@+id/profilePic"
     />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Take photo"
    android:id="@+id/main_btn_photo"
    android:onClick="onClickOfPhotoButton"
    android:layout_below="@+id/bu2"
    android:layout_marginTop="10dp"
    android:layout_alignParentStart="true" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="SIGN UP PAGE"
    android:gravity="center_horizontal"
    android:id="@+id/textView"
    android:textColor="#ffffff"
    android:layout_alignStart="@+id/main_btn_maps" />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColorHint="#ffffff"
    android:inputType="textPersonName"
    android:hint="First Name"
    android:ems="10"
    android:id="@+id/editText"
    android:layout_below="@+id/textView"
    android:layout_alignParentStart="true"
    android:layout_marginTop="30dp" />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="textPersonName"
    android:textColorHint="#ffffff"
    android:hint="Last Name"
    android:ems="10"
    android:id="@+id/editText2"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/editText"
    android:layout_alignParentLeft="true" />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="textEmailAddress"
    android:textColorHint="#ffffff"
    android:ems="10"
    android:id="@+id/editText3"
    android:layout_alignParentStart="true"
    android:hint="Email"
    android:layout_below="@+id/editText2"
    android:layout_alignParentLeft="true" />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="textPassword"
    android:textColorHint="#ffffff"
    android:ems="10"
    android:id="@+id/editText4"
    android:layout_alignParentStart="true"
    android:hint="Password"
    android:layout_below="@+id/editText3"
    android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:inputType="text"
        android:textColorHint="#ffffff"
        android:ems="10"
        android:id="@+id/editText5"
        android:layout_alignParentStart="true"
        android:hint="Address"
        android:layout_below="@+id/editText4"
        android:layout_alignParentLeft="true" />


<ImageView
    android:id="@+id/profilePic"
    android:layout_alignParentEnd="true"
    android:layout_toEndOf="@+id/editText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/img_icon"
    android:padding="1dp"
    android:layout_marginLeft="25dp"
    android:layout_below="@+id/editText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="upload photo"
        android:id="@+id/button"
        android:layout_marginTop="10dp"
        android:layout_marginRight="90dp"
        android:layout_below="@+id/bu2"
        android:layout_alignParentEnd="true"
        android:onClick="uploadClick" />

</RelativeLayout>