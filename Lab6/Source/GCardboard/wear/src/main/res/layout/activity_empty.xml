<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.surekhabolem.gcardboard.EmptyActivity"
    tools:deviceIds="wear">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Maps in Android Wear"
        app:layout_box="all" />

    <TextView
        android:id="@+id/clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:textColor="@android:color/white"
        app:layout_box="all" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Location"
        android:id="@+id/main_btn_maps"
        android:onClick="onClickOfMapButton"
        android:layout_below="@+id/main_btn_photo"
        android:layout_toStartOf="@+id/profilePic"
        android:layout_marginTop="30dp" />

</android.support.wearable.view.BoxInsetLayout>
